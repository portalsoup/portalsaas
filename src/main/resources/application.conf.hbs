ktor {
    deployment {
        port = 80
    }
    application {
        modules = [
            com.portalsoup.saas.core.ktor.modules.RootMainKt.root
        ]
    }
}

jdbc {
    url = "jdbc:postgresql://{{host}}:{{port}}/{{db}}?sslmode=require"
    driver = "{{driver}}"
    username = "{{username}}"
    password = "{{password}}"
    maxPool = "{{maxPool}}"
}

discord {
    token = "{{discordToken}}"
    myUserID = {{myDiscordID}}
}

openai {
    token = "{{openaiToken}}"
}

pricecharting {
    token = "{{pricechartingToken}}"
}

strava {
    token = "{{stravaToken}}"
    athleteID = "{{stravaAthleteID}}"
}